<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>Ecole France</display-name>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <filter>
    <filter-name>PrimeFaces FileUpload Filter</filter-name>
    <filter-class>org.primefaces.webapp.filter.FileUploadFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>PrimeFaces FileUpload Filter</filter-name>
    <servlet-name>Faces Servlet</servlet-name>
  </filter-mapping>
  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>ec.edu.ecole.util.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>*.xhtml</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>DisplayStudentPhoto</servlet-name>
    <servlet-class>ec.edu.ecole.student.DisplayStudentPhoto</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DisplayTeacherPhoto</servlet-name>
    <servlet-class>ec.edu.ecole.teacher.DisplayTeacherPhoto</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DisplayNoticeImage</servlet-name>
    <servlet-class>ec.edu.ecole.notice.DisplayNoticeImage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DisplayStudentPhoto</servlet-name>
    <url-pattern>/DisplayStudentPhoto</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DisplayTeacherPhoto</servlet-name>
    <url-pattern>/DisplayTeacherPhoto</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DisplayNoticeImage</servlet-name>
    <url-pattern>/DisplayNoticeImage</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>javax.faces.FACELETS_SKIP_COMMENTS</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>javax.faces.PROJECT_STAGE</param-name>
    <param-value>Development</param-value>
  </context-param>
  <context-param>
    <param-name>primefaces.THEME</param-name>
    <param-value>admin</param-value>
  </context-param>
  <context-param>
    <param-name>primefaces.FONT_AWESOME</param-name>
    <param-value>true</param-value>
  </context-param>
  <error-page>
    <error-code>404</error-code>
    <location>/paginas/error/404.xhtml</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/paginas/error/403.xhtml</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/paginas/error/500.xhtml</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/paginas/error/error.xhtml</location>
  </error-page>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>